# Environment variables template
# Copy to .env and fill in your values

# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your_bot_token_here
TELEGRAM_CHAT_ID=your_chat_id_here

# AI Vision Analysis (Optional - enhances change detection)
GEMINI_API_KEY=your_gemini_api_key_here  # Get free API key from https://aistudio.google.com/app/apikey

# Screenshot Detection Settings
CHANGE_THRESHOLD=0.5  # Percentage of pixels that need to change (0.1 = very sensitive, 2.0 = less sensitive)
SAVE_DEBUG_IMAGES=false  # Set to true to save difference images for debugging
USE_AI_ANALYSIS=true  # Use Google Gemini for intelligent change analysis
SAVE_ALL_DEBUG=false  # Set to true to save debug images even when no changes detected

# GitHub Actions will use repository secrets instead of .env file